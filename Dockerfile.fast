# Fast Polarway Docker - uses pre-built binary
FROM debian:bookworm-slim

RUN apt-get update && apt-get install -y --no-install-recommends \
    libssl3 ca-certificates netcat-openbsd && \
    rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy pre-built binary from host
COPY ./target/release/polarway-grpc /app/polarway-grpc

ENV POLARWAY_BIND_ADDRESS=0.0.0.0:50052
EXPOSE 50052

CMD ["/app/polarway-grpc"]
